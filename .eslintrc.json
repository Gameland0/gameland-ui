{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      // Allows for the parsing of JSX
      "jsx": true
    }
  },
  "ignorePatterns": [
    "node_modules/**/*",
    "craco.config.js",
    "test",
    "*.d.ts",
    "scripts/**/*",
    "setupProxy.js"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "eqeqeq": "off",
    "no-undef": "off",
    "no-restricted-globals": "off",
    "no-unused-vars": "off"
  }
}